<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_7mdp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Your BLOGS"
        android:textAlignment="center"
        android:textColor="@color/perple"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_8mdp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:background="@drawable/searchview_bg"
        android:iconifiedByDefault="false"
        android:queryHint="Search"
        app:layout_constraintEnd_toEndOf="@+id/user_Profile"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageButton
        android:id="@+id/saveblog"
        android:layout_width="@dimen/_23mdp"
        android:layout_height="@dimen/_23mdp"
        android:layout_marginEnd="@dimen/_30mdp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/bookmark"
        app:layout_constraintBottom_toBottomOf="@+id/user_Profile"
        app:layout_constraintEnd_toStartOf="@+id/user_Profile"
        app:layout_constraintTop_toTopOf="@+id/user_Profile"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_Profile"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="@dimen/_7mdp"
        android:layout_marginEnd="@dimen/_23mdp"
        android:src="@drawable/userimage"
        app:civ_border_color="@color/Blue"
        app:civ_border_width="@dimen/_2mdp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.7" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/create_blog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:tint="@color/white"
        app:shapeAppearanceOverlay="@style/round"
        app:backgroundTint="@color/Blue"
        app:borderWidth="@dimen/_2mdp"
        app:layout_constraintBottom_toBottomOf="@+id/blogrv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/blogrv"
        app:layout_constraintTop_toTopOf="@+id/blogrv"
        app:layout_constraintVertical_bias="0.79"
        app:srcCompat="@drawable/baseline_add_24"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_1mdp"
        android:layout_marginTop="@dimen/_5mdp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveblog" />

    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        android:id="@+id/blogrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="5dp"
        app:shimmer_demo_grid_child_count="10"
        app:shimmer_demo_layout="@layout/blog_shimar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/simple_layout_blog"
        app:layout_constraintTop_toBottomOf="@+id/searchview"
        >
    </com.cooltechworks.views.shimmer.ShimmerRecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>